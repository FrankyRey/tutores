{% extends '@AdminLTE/layout/default-layout.html.twig' %}

{% block logo_mini %}
    <img src="{{ asset('build/logo_small.png') }}" width="40" />
{% endblock %}

{% block logo_large %}
    <img src="{{ asset('build/logo.png') }}" width="100" />
{% endblock %}

{% block page_title %}
	Subir Documentos
{% endblock %}

{% block page_subtitle %}
{% endblock %}

{% block page_content %}
	<div class="row">
		<div class="col-md-10 col-md-offset-1">
			<div class="panel panel-default">
				<div class="panel-body">
					<div class="panel-content">
						<p class="text-center"><strong>Anexo 3</strong></p>
                        <p class="text-center"><strong>REQUISITOS PARA EL DESEMPEÑO DE LA FUNCIÓN</strong></p>
                        <p class="text-center"> CICLO ESCOLAR 2019-2020</p>
                        <p>Entidad Federativa: <strong>Puebla</strong></p>
                        {{ form_start(form, { 'enctype':"multipart/form-data"}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    {{ form_row(form.nombreDocumento) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.referencia) }}
                                </div>
                            </div>
                            <a class="btn btn-danger" href="{{ path('home') }}">Salir</a>
                            <button class="btn pull-righ">{{ button_label|default('Guardar') }}</button>
                        {{ form_end(form) }}
                        <div class="ajax-results">
                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
    {% if documentos %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="panel-content">
                        <p class="text-center"><strong>Documentos en el sistema</strong></p>
                        <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Documento</th>
                                    <th colspan="2" class="text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% set counter = 1 %}
                                {% for documento in documentos %}
                                    <tr>
                                        <td> {{ counter }}</td>
                                        <td>{{ documento.referencia }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('descargar_documento', { 'idDocumentos': documento.idDocumentos }) }}" title="Descargar"><i class="fas fa-download"></i></a>
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ path('elimina_documento', { 'idDocumentos': documento.idDocumentos }) }}" title="Eliminar"><span class="text-danger"><i class="fas fa-times"></i></span></a>
                                        </td>
                                    </tr>
                                    {% set counter = counter + 1 %}
                                {% else %}
                                    <tr>
                                        <td colspan="4">Usted aún no cuenta con documentos guardadas.</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endif %}
{% endblock %}

{% block javascripts_page %}
{% endblock %}